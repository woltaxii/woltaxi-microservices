# WOLTAXI MongoDB Atlas Environment Variables Template
# Copy this file to .env and fill in your Atlas credentials

# MongoDB Atlas Configuration
ATLAS_USERNAME=your-atlas-username
ATLAS_PASSWORD=your-atlas-password
ATLAS_CLUSTER=your-cluster-name
ATLAS_DATABASE=woltaxi_users

# Full Atlas Connection String (alternative to individual components)
# ATLAS_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Atlas Cluster Details
ATLAS_REGION=us-east-1
ATLAS_TIER=M0
ATLAS_MONGODB_VERSION=7.0

# Security Settings
ATLAS_IP_WHITELIST=0.0.0.0/0
ATLAS_AUTH_SOURCE=admin
ATLAS_SSL_ENABLED=true

# Connection Pool Settings
ATLAS_MAX_POOL_SIZE=50
ATLAS_MIN_POOL_SIZE=10
ATLAS_MAX_IDLE_TIME=60000
ATLAS_MAX_LIFE_TIME=120000
ATLAS_CONNECT_TIMEOUT=10000
ATLAS_SOCKET_TIMEOUT=5000
ATLAS_SERVER_SELECTION_TIMEOUT=5000

# Monitoring and Alerts
ATLAS_MONITORING_ENABLED=true
ATLAS_PROFILER_ENABLED=false
ATLAS_SLOW_QUERY_THRESHOLD=1000

# Backup Settings
ATLAS_BACKUP_ENABLED=true
ATLAS_BACKUP_FREQUENCY=24
ATLAS_BACKUP_RETENTION=7

# Example connection strings for different WOLTAXI services:
# USER_SERVICE_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/woltaxi_users?retryWrites=true&w=majority
# DRIVER_SERVICE_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/woltaxi_drivers?retryWrites=true&w=majority
# RIDE_SERVICE_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/woltaxi_rides?retryWrites=true&w=majority
# PAYMENT_SERVICE_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/woltaxi_payments?retryWrites=true&w=majority