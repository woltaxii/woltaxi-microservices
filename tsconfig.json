{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "eureka-server/src/**/*",
    "user-service/src/**/*",
    "driver-service/src/**/*",
    "ride-service/src/**/*",
    "payment-hub-service/src/**/*",
    "emergency-service/src/**/*",
    "travel-integration-service/src/**/*",
    "wolkurye-service/src/**/*",
    "ai-ml-service/src/**/*",
    "smart-vehicle-service/src/**/*",
    "analytics-service/src/**/*",
    "global-performance-service/src/**/*",
    "marketing-service/src/**/*",
    "subscription-service/src/**/*",
    "api-gateway/src/**/*"
  ],
  "exclude": [
    "mobile-app/**/*",
    "driver-mobile-app/**/*", 
    "**/node_modules",
    "**/target",
    "**/build",
    "**/dist",
    "**/.git",
    "**/android",
    "**/ios",
    "**/__tests__",
    "**/coverage",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}