# =============================================================================
# WOLTAXI Emergency Service - Environment Configuration
# Acil Durum Servisi Ortam Değişkenleri
# =============================================================================

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=woltaxi_db
POSTGRES_USER=woltaxi_user
POSTGRES_PASSWORD=woltaxi_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=woltaxi_redis_2024

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=emergency-service

# Eureka Configuration
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# =============================================================================
# EXTERNAL INTEGRATIONS - DIŞ ENTEGRASYONLAR
# =============================================================================

# Twilio Configuration (SMS and Voice Calls)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
EMERGENCY_PHONE_NUMBER=+1234567890

# Firebase Configuration (Push Notifications)
FIREBASE_PROJECT_ID=woltaxi-emergency
FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/firebase-key.json

# Google Maps Configuration (Geocoding and Location Services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# SECURITY CONFIGURATION - GÜVENLİK YAPILANDIRMASI
# =============================================================================

# JWT Secret for Emergency Service
JWT_SECRET=woltaxi-emergency-secret-2024-ultra-secure

# Encryption Configuration
JASYPT_ENCRYPTOR_PASSWORD=woltaxi-emergency-encryption-2024

# SSL/TLS Configuration (Production)
SSL_ENABLED=false
SSL_KEY_STORE=/path/to/keystore.p12
SSL_KEY_STORE_PASSWORD=woltaxi-ssl-2024
SSL_KEY_STORE_TYPE=PKCS12

# =============================================================================
# PERFORMANCE AND MONITORING - PERFORMANS VE İZLEME
# =============================================================================

# JVM Configuration
JAVA_OPTS=-Xmx1024m -Xms512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# Actuator Endpoints
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus,env

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_EMERGENCY=INFO
LOGGING_FILE_NAME=logs/emergency-service.log

# =============================================================================
# EMERGENCY SERVICE SPECIFIC - ACİL DURUM SERVİSİ ÖZEL
# =============================================================================

# Critical Response Times (in seconds)
EMERGENCY_CRITICAL_RESPONSE_TIME=30
EMERGENCY_HIGH_PRIORITY_RESPONSE_TIME=60
EMERGENCY_STANDARD_RESPONSE_TIME=300
EMERGENCY_AUTO_ESCALATION_TIME=600

# Location Tracking Configuration
LOCATION_UPDATE_INTERVAL_SECONDS=15
LOCATION_ACCURACY_THRESHOLD_METERS=10
LOCATION_MAX_SHARING_DURATION_HOURS=24

# Communication Settings
SMS_MAX_RETRY_ATTEMPTS=3
SMS_RETRY_DELAY_SECONDS=30
EMERGENCY_SUPPORTED_LANGUAGES=en,tr,es,fr,de,ar,zh,hi,pt,ru

# Auto-Response Configuration
PANIC_BUTTON_DELAY_SECONDS=60
MEDICAL_EMERGENCY_DELAY_SECONDS=30
ACCIDENT_RESPONSE_DELAY_SECONDS=45
HARASSMENT_RESPONSE_DELAY_SECONDS=15

# Recording Settings
AUTO_RECORD_AUDIO=true
AUTO_RECORD_VIDEO=false
MAX_RECORDING_DURATION_MINUTES=30
RECORDING_AUDIO_QUALITY=HIGH
RECORDING_VIDEO_QUALITY=MEDIUM
CLOUD_BACKUP_ENABLED=true

# Performance Settings
MAX_CONCURRENT_INCIDENTS=1000
BATCH_PROCESSING_SIZE=100
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=50
KAFKA_CONSUMER_THREADS=10

# Escalation Configuration
ESCALATION_LEVEL_1_MINUTES=5
ESCALATION_LEVEL_2_MINUTES=15
ESCALATION_LEVEL_3_MINUTES=30
EXECUTIVE_ESCALATION_MINUTES=60

# Data Retention Policy (in days)
ACTIVE_INCIDENTS_RETENTION_DAYS=365
RESOLVED_INCIDENTS_RETENTION_DAYS=1095
LOCATION_TRACKING_RETENTION_DAYS=90
COMMUNICATION_LOGS_RETENTION_DAYS=180
RECORDINGS_RETENTION_DAYS=365

# Monitoring Thresholds
HEALTH_CHECK_INTERVAL_SECONDS=30
CRITICAL_ALERT_THRESHOLD=10
PERFORMANCE_DEGRADATION_THRESHOLD=5
SYSTEM_OVERLOAD_THRESHOLD=100

# =============================================================================
# COUNTRY SPECIFIC EMERGENCY SERVICES - ÜLKE ÖZEL ACİL SERVİSLER
# =============================================================================

# Turkey
TURKEY_POLICE_NUMBER=155
TURKEY_AMBULANCE_NUMBER=112
TURKEY_FIRE_NUMBER=110

# United States
US_EMERGENCY_NUMBER=911

# United Kingdom
UK_EMERGENCY_NUMBER=999

# Germany
GERMANY_POLICE_NUMBER=110
GERMANY_AMBULANCE_NUMBER=112
GERMANY_FIRE_NUMBER=112

# France
FRANCE_POLICE_NUMBER=17
FRANCE_AMBULANCE_NUMBER=15
FRANCE_FIRE_NUMBER=18

# Default EU Emergency
EU_EMERGENCY_NUMBER=112

# =============================================================================
# FEATURE FLAGS - ÖZELLİK BAYRAKLARI
# =============================================================================

FEATURE_AUTO_POLICE_CALL=true
FEATURE_AUTO_AMBULANCE_CALL=true
FEATURE_LOCATION_SHARING=true
FEATURE_AUDIO_RECORDING=true
FEATURE_VIDEO_RECORDING=false
FEATURE_AI_THREAT_DETECTION=false
FEATURE_PREDICTIVE_ALERTS=false

# =============================================================================
# MAIL CONFIGURATION - MAIL YAPILANDIRMASI
# =============================================================================

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=emergency@woltaxi.com
MAIL_PASSWORD=your-mail-password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true

# =============================================================================
# ESCALATION CONTACTS - ESKALASYON İLETİŞİM
# =============================================================================

ESCALATION_LEVEL_1_CONTACTS=emergency-team@woltaxi.com
ESCALATION_LEVEL_2_CONTACTS=emergency-team@woltaxi.com,ops-manager@woltaxi.com
ESCALATION_LEVEL_3_CONTACTS=emergency-team@woltaxi.com,ops-manager@woltaxi.com,cto@woltaxi.com
EXECUTIVE_ESCALATION_CONTACTS=ceo@woltaxi.com,cto@woltaxi.com

# Emergency Helpline
EMERGENCY_HELPLINE_NUMBER=+90800123456

# =============================================================================
# DEVELOPMENT AND TESTING - GELİŞTİRME VE TEST
# =============================================================================

# Test Mode Configuration
TEST_MODE_ENABLED=false
MOCK_EXTERNAL_SERVICES=false
TEST_EMERGENCY_CONTACTS_ENABLED=true

# Development Settings
SPRING_PROFILES_ACTIVE=development
DEBUG_MODE=false
SWAGGER_ENABLED=true

# =============================================================================
# DOCKER SPECIFIC - DOCKER ÖZEL
# =============================================================================

# Docker Network
DOCKER_NETWORK=woltaxi-network

# Container Health Check
HEALTH_CHECK_URL=http://localhost:8091/actuator/health
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s

# =============================================================================
# NOTES - NOTLAR
# =============================================================================

